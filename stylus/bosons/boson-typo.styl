@font-face
   font-family Arial
   font-style normal
   src url(../fonts/arial.ttf)
   font-weight 600
   
@font-face
   font-family Arial
   font-style normal
   src url(../fonts/arialbd.ttf)
   font-weight 800
   
set-font-size(value) {
   font-size: value;
   
   if (value is inherit) {
      /* do nothing */
   } else {
      font-size: remify(value);
   }
}

remify(value) {
   u = unit(value);
   
   if (u is 'px') {
      return unit(value/16, 'rem');
   } else {
      return unit(value, u);
   }
}
