.atom-main-header-logo-img
	width 100%
	height 50px
	background-image url('../img/Topo/logo.png')
	background-size contain
	background-repeat no-repeat
	background-position center
	
.atom-main-header-login-greetings
	set-font-size(18px)
	font-weight 800
	+below(650px)
		set-font-size(15px)
	
.atom-main-header-login-actions
	set-font-size(12px)
	margin-top 2px
	+below(650px)
		set-font-size(11px)
	
.quark-main-header-login-actions-register
	display inline-block
	cursor pointer
	&::after
		content "-"
		margin-left 3px
		margin-right 3px
		
.quark-main-header-login-actions-login
	display inline-block
	cursor pointer
	
.atom-main-header-search-bar-magnifier
	padding 6px 2px
	width 10%
	display inline-block
	background-color #000
	border-radius 10px
	position relative
	z-index 1
	cursor pointer
	+below(650px)
		position absolute
		border-radius 0
		width 28px
		top -4px
		left 21px
	
.quark-main-header-search-bar-magnifier-img
	width 100%
	height 18px
	background-image url('../img/Topo/search.png')
	background-size contain
	background-position center
	background-repeat no-repeat
	+below(650px)
		height 18px
	
.atom-main-header-search-bar-input
	width 90%
	display inline-block
	padding 5px 25px
	border-radius 10px
	background-color #F9C438
	color #000
	border none
	box-shadow none
	set-font-size(16px)
	box-shadow none
	border none
	position absolute
	left 18px
	top 1px
	outline none
	height 28px
	&::-webkit-input-placeholder
		color #000
	&::-moz-input-placeholder
		color #000
	&:-moz-input-placeholder
		color #000
	&:-ms-input-placeholder
		color #000
	+below(650px)
		width 100%
		left 0
		border-radius 0
		padding 5px 60px
		
.atom-main-header-contact-flags
	width 100%
	margin-bottom 5px
	
.quark-main-header-contact-flags-each
	width 22px
	display inline-block
	margin 0 2px
	
.atom-main-header-contact-skype
	width 100%
	flex(flex, -webkit-flex)
	
.quark-main-header-contact-skype-img
	width 26px
	display inline-block
	margin-right 5px
	
.quark-main-header-contact-skype-number
	display inline-block
	color #12A5F4
