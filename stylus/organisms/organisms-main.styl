.organism-main
	width 100%
	
.organism-main-header
	width 100%
	max-width 960px
	margin 0 auto
	height 100px
	flex(flex, -webkit-flex)
	+below(650px)
		display block
		height auto
		padding 10px 0
	
.organism-main-banner
	width 100%
	
.organism-main-products
	width 100%
	max-width 960px
	margin 0 auto
	padding-top 50px
	position relative
	padding-bottom 90px
	
.organism-main-footer
	width 100%
	padding 50px 20px 60px 20px
	background-color #D9D9D9
	+below(650px)
		padding 50px 0 60px 0
	
.organism-modal-products
	width 100%
	max-width 600px
	height 600px
	flex(flex, -webkit-flex)
	margin 0 auto
	position fixed
	left 0
	right 0
	top 50%
	transform translateY(-50%)
	background-color #FFF
	z-index -1
	opacity 0
	transition all 0.3s ease-in-out
	.modal-active &
		opacity 1
		z-index 10
	
.organism-overlay
	width 100%
	height 100%
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	background-color #000
	opacity 0
	z-index -1
	transition all 0.3s ease-in-out
	.modal-active &
		opacity 0.5
		z-index 5