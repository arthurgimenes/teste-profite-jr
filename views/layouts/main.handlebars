			.bx-wrapper .bx-pager, .bx-wrapper .bx-pager, .bx-wrapper .bx-pager, .bx-wrapper .bx-controls-auto {
			    bottom: 11px;
			    left: 142px;
			    position: absolute;
			    width: 100px;
			}

			.lSSlideOuter .lSPager.lSpg  {
			display: block;
		}
			.lSAction > .lSNext{
